# tbot_web_configuration.service

[Unit]
Description=RIGD TradeBot Web UI (Configuration Phase)
After=network.target

[Service]
Type=simple
Environment=PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
Environment="FLASK_SECRET_KEY=changeme-unsafe-dev-key"
Environment="BOT_WEB_PHASE=configuration"
WorkingDirectory=%h/rigd_tbot
ExecStart=/usr/bin/env python3 tbot_web/py/portal_web_configuration.py
Restart=no

[Install]
WantedBy=default.target
